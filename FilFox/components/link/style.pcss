.filecoin-link {
  @apply relative break-all font-mono;
}

.filecoin-link .ellipsis {
  @apply relative inline-block break-normal overflow-hidden leading-none;
  width: 1em;
  text-indent: 2em;
  &::after {
    @apply absolute block bottom-0;
    content: '';
    left: 50%;
    transform: translateX(-50%);
    width: 2px;
    height: 2px;
    border-radius: 1px;
    background-color: currentColor;
    box-shadow: -0.3em 0 currentColor, 0 0 currentColor, 0.3em 0 currentColor;
  }
}
